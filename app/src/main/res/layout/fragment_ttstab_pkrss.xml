<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ttsTabPkrssModel"
            type="com.pkrss.voicespeakking.model.TTSTabPkrssModel" />

        <variable
            name="ttsTabPkrssHandler"
            type="com.pkrss.voicespeakking.handler.TTSTabPkrssHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerAdapter="@{ttsTabPkrssModel.spinnerLocalAdapter}"
            android:setOnItemSelectedListener="@{ttsTabPkrssHandler.onLocaleItemSelected}" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerAdapter="@{ttsTabPkrssModel.spinnerEngineAdapter}"
            android:setOnItemSelectedListener="@{ttsTabPkrssHandler.onEngineItemSelected}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:onClick="@{ttsTabPkrssHandler.onClickApply}"/>

    </LinearLayout>
</layout>
